#include <bits/stdc++.h>
using namespace std;

void func(string s, int i, int& count) {
    if(i == s.size()) return;
    
    if(s[i] == 'a' || s[i] == 'e' || s[i] == 'i' || s[i] == 'o' || s[i] == 'u' || s[i] == 'A' || s[i] == 'E' || s[i] == 'I' || s[i] == 'O' || s[i] == 'U') count++;
    
    func(s, i + 1, count);
}

int main() {
    string s;
    getline(cin, s);
    int count = 0;
    func(s, 0, count);
    cout << count << endl;
    return 0;
}
